{
    "compilerOptions": {
        "target": "es2021",
        "outDir": "dist",
        "rootDir": "src",
        "module": "commonjs",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "baseUrl": "src",
        "paths": {
            "@/*": ["*"],
            "@/tests/*": ["../tests/*"]
        },
        "strict": true,
    },
    "include": ["src", "tests"]
}